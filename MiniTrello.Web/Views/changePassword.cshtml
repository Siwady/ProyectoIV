<div>
    <div id="newBoard" class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form">
                <fieldset>
                    <h2>Change Password</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input ng-model="changePassword.OldPassword" type="password" name="oldpassword" id="title" class="form-control input-lg" placeholder="OldPassword" tabindex="1">
                    </div>
                    <div class="form-group">
                        <input ng-model="changePassword.NewPassword" type="password" name="newpassword" id="description" class="form-control input-lg" placeholder="NewPassword" tabindex="1">
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input ng-click="ChangePassword()" type="submit" class="btn btn-lg btn-success btn-block" value="Change Password">
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>